{
  "name": "nuo",
  "version": "0.1.0",
  "description": ":two_hearts: Lightweight promise polyfill. A+ compliant. Implements notify, progress, and finally.",
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "node --harmony .tools/build",
    "lint": "eslint --max-warnings 10 .",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --compilers js:babel-register ./test/*-tests.js",
    "test:cjs": "mocha --compilers js:babel-register ./test/cjs/*-tests.js",
    "test:iife": "mocha --compilers js:babel-register ./test/iife/*-tests.js",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm test",
    "release": "bash .tools/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crossjs/nuo.git"
  },
  "keywords": [
    "promise",
    "promise-polyfill",
    "ES6",
    "promises-aplus",
    "notify",
    "progress",
    "finally"
  ],
  "author": "crossjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crossjs/nuo/issues"
  },
  "homepage": "https://github.com/crossjs/nuo",
  "dependencies": {
    "setimmediate": "^1.0.5"
  },
  "peerDependencies": {
    "setimmediate": "^1.0.5"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "eslint": "3.8.0",
    "eslint-config-plato": "^0.0.1",
    "mocha": "^3.1.2",
    "nyc": "^8.3.1",
    "promises-aplus-tests": "^2.1.2",
    "rollup": "^0.36.3",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "uglify-js": "^2.7.3"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  }
}
